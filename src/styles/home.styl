.label
  font-weight bold
  font-size: 100%
  color: #909090

.nav-tabs
  li
    text-transform uppercase
    cursor pointer

.selectedDepartment
  font-size medium

.pict
  min-width 138px
  min-height 138px
  :first-child
    padding 2px
    border 1px solid #979797

.itemOpButtons
  display inline-block
  margin-left 10px
  cursor pointer
  font-weight bold
  font-size x-large
  font-family Verdana
  -webkit-user-select none
  -moz-user-select none
  -ms-user-select none
  :first-child
    padding 0 0 0 5px
    color: green
    &:hover
      background-color :#DAECCB
  :last-child
    padding 0 0 4px 8px
    color red
    &:hover
      background-color :#F3CECE
  div
    width 30px
    height 30px

    border-radius 30px
    display inline-block


.sidebar-wrapper
  margin-left  -250px
  left  250px
  width 250px
  background #78807A
  position fixed
  height 100%
  overflow-y auto
  z-index: 1000
  color: #dcdcdc
  /*transition all 0.4s ease 0s*/

.sidebar
  padding-top 20px
  list-style none
  .sidebar-content
    position fixed
    overflow-y scroll
    top 70px
    /*padding-left 20px*/
    height 90%
    width 200px
  .row
    padding-right 20px
    .strike
      text-decoration line-through
      color: darkgrey

  hr
    margin-top 8px
    margin-bottom 0
  ul
    padding-left 0
    li
      list-style none
      cursor pointer
      &:hover
        color #475356


  .toggle-active-btn
    cursor: pointer
    color: #f5f5f5
    height 30px
    line-height 30px
    margin-bottom 20px
    background-color #54791C
    border-radius 5px
    &:hover
      background-color #47641A

.animation.ng-enter,
.animation.ng-leave
  -webkit-transition: 0.2s ease-in-out

.animation.ng-enter
  font-size 0px
  /*line-height 0px*/

.animation.ng-leave
  font-size inherit
  /*line-height inherit*/

.animation.ng-enter.ng-enter-active
  font-size inherit
  /*line-height 0px*/


.animation.ng-leave.ng-leave-active
  font-size 0px
  /*line-height 0px*/

.prod-info
  font-size medium
  .col-md-5
    margin-bottom 20px